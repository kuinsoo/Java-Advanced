<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="zip.client.ZipSearchMainController">
   <top>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <ComboBox fx:id="cmbSelect" prefWidth="150.0" />
            <TextField fx:id="tfBox" promptText="검색 데이터 입력" />
            <Button fx:id="btnSearch" mnemonicParsing="false" text="검색" />
         </children>
      </HBox>
   </top>
   <center>
      <TableView fx:id="zipTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="zipCol" prefWidth="75.0" text="우편번호" />
          <TableColumn fx:id="sidoCol" prefWidth="50.0" text="시도" />
            <TableColumn fx:id="gugunCol" prefWidth="75.0" text="구군" />
            <TableColumn fx:id="dongCol" prefWidth="100.0" text="동" />
            <TableColumn fx:id="riCol" prefWidth="90.0" text="리" />
            <TableColumn fx:id="bldgCol" prefWidth="100.0" text="빌딩" />
            <TableColumn fx:id="bunjiCol" prefWidth="108.0" text="번지" />
        </columns>
      </TableView>
   </center>
</BorderPane>
