<StackPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.MemLoginController">
   <children>
      <VBox alignment="TOP_CENTER" prefWidth="500.0" spacing="10.0" style="-fx-background-color: #EEE;">
         <children>
            <Label fx:id="lbl_login" alignment="CENTER" contentDisplay="CENTER" text="로 그 인" textAlignment="CENTER" textFill="#5b1a1a">
               <font>
                  <Font name="D2Coding" size="30.0" />
               </font>
            </Label>
            <HBox fx:id="hbox1" alignment="CENTER">
               <children>
                  <Label fx:id="lbl_id" text=" I  D  " textFill="#281046">
                     <font>
                        <Font name="D2Coding" size="17.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="tfMem_id" promptText="ID를 입력하세요">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox fx:id="hbox2" alignment="CENTER">
               <children>
                  <Label fx:id="lbl_pw" text="Password" textFill="#281046">
                     <font>
                        <Font name="D2Coding" size="15.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="tfMem_pw" promptText="PW를 입력하세요">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox fx:id="hbox3" alignment="CENTER" spacing="17.0">
               <children>
                  <Button fx:id="btn_login" mnemonicParsing="false" onAction="#login" prefWidth="100.0" text="로그인" />
                  <Button fx:id="btn_signup" mnemonicParsing="false" onAction="#signUp" prefWidth="100.0" text="회원가입" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <TextArea fx:id="taResult" prefHeight="400.0" prefWidth="200.0" promptText="회원정보 표시">
               <font>
                  <Font name="D2Coding" size="12.0" />
               </font>
            </TextArea>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
